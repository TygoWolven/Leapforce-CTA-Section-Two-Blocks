---
import Arrow from "../atoms/Arrow.astro"
---

<article>
    <a href="#">
        <div>
            <h2>Title</h2>
            <p>Supporting text about the call-to-action goes here.</p>
        </div>
        <button>
            <Arrow color="var(--white)" />
        </button>
    </a>
</article>

<style>
    article {
        display: flex;
        align-items: end;
        position: relative;
        border-radius: var(--radius);

        background: url("/images/cta-background.png");
        background-position: center;

        width: 50%;
        height: 515px;
        padding: 32px 24px;

        /* Mobile */
        @media (max-width: 768px) {
            width: 100%;
        }
        
        &::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 50%;
            border-radius: var(--radius);
            background: linear-gradient(
                rgba(20, 20, 20, 0),
                rgba(20, 20, 20, 1)
            );
            left: 0;
            bottom: 0;
            opacity: 80%;
        }

        a {
            z-index: 1;
            width: 100%;
            display: flex;
            color: var(--white);
            justify-content: space-between;
            align-items: end;

            div {
                display: flex;
                flex-direction: column;

                p {
                    color: var(--soft-white);
                    margin-top: 8px;
                    opacity: 50%;
                }
            }

            button {
                display: flex;
                background: none;
                height: fit-content;
                border-radius: var(--radius);
                border: 2px solid rgba(255, 255, 255, 0.3);

                svg {
                    margin: 14px;
                }
            }
        }
    }
</style>